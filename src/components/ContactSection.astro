---
import { Icon } from "astro-icon/components";
---

<section id="contact" class="py-20 px-4 max-w-4xl mx-auto text-center">
    <div
        class="animate-on-scroll opacity-0 translate-y-10 transition-all duration-700"
    >
        <h2 class="text-4xl font-bold mb-8">Get In Touch</h2>
        <p
            class="text-xl text-gray-600 dark:text-gray-300 mb-12 max-w-2xl mx-auto"
        >
            Have a project in mind or just want to say hi? I'm always open to
            discussing new opportunities and ideas.
        </p>

        <form
            name="contact"
            method="POST"
            class="max-w-xl mx-auto space-y-6 text-left"
        >
            <div class="form-control">
                <label class="label">
                    <span class="label-text">Name</span>
                </label>
                <input
                    type="text"
                    name="name"
                    placeholder="Your Name"
                    class="input input-bordered w-full bg-transparent border-gray-400 dark:border-gray-600 focus:border-primary"
                    required
                />
            </div>

            <div class="form-control">
                <label class="label">
                    <span class="label-text">Email</span>
                </label>
                <input
                    type="email"
                    name="email"
                    placeholder="your.email@example.com"
                    class="input input-bordered w-full bg-transparent border-gray-400 dark:border-gray-600 focus:border-primary"
                    required
                />
            </div>

            <div class="form-control">
                <label class="label">
                    <span class="label-text">Message</span>
                </label>
                <textarea
                    name="message"
                    class="textarea textarea-bordered h-32 bg-transparent border-gray-400 dark:border-gray-600 focus:border-primary"
                    placeholder="What's on your mind?"
                    required></textarea>
            </div>

            {/* ReCAPTCHA V3 Placeholder - Needs Site Key */}
            <div
                class="g-recaptcha"
                data-sitekey="YOUR_RECAPTCHA_SITE_KEY_HERE"
                data-size="invisible"
            >
            </div>

            <button type="submit" class="btn btn-primary w-full gap-2 text-lg">
                <Icon name="carbon:send" class="w-5 h-5" />
                Send Message
            </button>

            <p class="text-xs text-center text-gray-500 mt-4">
                This site is protected by reCAPTCHA and the Google
                <a href="https://policies.google.com/privacy" class="underline"
                    >Privacy Policy</a
                > and
                <a href="https://policies.google.com/terms" class="underline"
                    >Terms of Service</a
                > apply.
            </p>
        </form>
    </div>
</section>

<script is:inline src="https://www.google.com/recaptcha/api.js"></script>
