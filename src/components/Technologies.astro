---
import LabGlassware from "./LabGlassware.astro";
import { Icon } from "astro-icon/components";
---

<div class="w-full py-10">
  <div
    class="grid grid-cols-3 sm:grid-cols-4 md:grid-cols-6 lg:grid-cols-8 gap-4 md:gap-8 justify-items-center perspective-1000"
  >
    {
      [
        {
          icon: "typescript",
          name: "TS",
          variant: "beaker",
          color: "text-blue-500",
        },
        {
          icon: "go",
          name: "Go",
          variant: "flask-round",
          color: "text-cyan-500",
        },
        {
          icon: "nodejs",
          name: "Node",
          variant: "flask-erlenmeyer",
          color: "text-green-500",
        },
        {
          icon: "dotnetcore",
          name: ".NET",
          variant: "beaker",
          color: "text-purple-500",
        },
        {
          icon: "java",
          name: "Java",
          variant: "flask-round",
          color: "text-red-500",
        },
        {
          icon: "kubernetes",
          name: "K8s",
          variant: "flask-erlenmeyer",
          color: "text-blue-600",
        },
        {
          icon: "amazonwebservices-wordmark",
          name: "AWS",
          variant: "beaker",
          color: "text-yellow-600",
        },
        {
          icon: "azure",
          name: "Azure",
          variant: "flask-round",
          color: "text-blue-400",
        },
        {
          icon: "docker",
          name: "Docker",
          variant: "flask-erlenmeyer",
          color: "text-blue-500",
        },
        {
          icon: "react",
          name: "React",
          variant: "beaker",
          color: "text-cyan-400",
        },
        {
          icon: "postgresql",
          name: "Postgres",
          variant: "flask-round",
          color: "text-blue-300",
        },
        {
          icon: "microsoftsqlserver",
          name: "SQL",
          variant: "flask-erlenmeyer",
          color: "text-red-600",
        },
        {
          icon: "grafana",
          name: "Grafana",
          variant: "beaker",
          color: "text-orange-500",
        },
        {
          icon: "prometheus",
          name: "Prom",
          variant: "flask-round",
          color: "text-orange-600",
        },
        {
          icon: "python",
          name: "Python",
          variant: "flask-erlenmeyer",
          color: "text-yellow-500",
        },
        {
          icon: "lua",
          name: "Lua",
          variant: "beaker",
          color: "text-blue-800",
        },
        {
          icon: null, // No icon inside, the liquid is the star
          name: "Software Solution",
          variant: "solution",
          color: "",
        },
      ].map((tech) => (
        <div class="flex flex-col items-center gap-2 group">
          <LabGlassware
            variant={tech.variant as any}
            color={tech.color}
            class="w-20 h-24 md:w-24 md:h-32"
          >
            {tech.icon && (
              <Icon
                name={`devicon:${tech.icon}`}
                class="text-3xl md:text-4xl drop-shadow-md"
              />
            )}
            {!tech.icon && <div class="text-3xl animate-pulse">âœ¨</div>}
          </LabGlassware>
          <span class="text-xs font-mono font-medium text-gray-400 group-hover:text-white transition-colors">
            {tech.name}
          </span>
        </div>
      ))
    }
  </div>
</div>
