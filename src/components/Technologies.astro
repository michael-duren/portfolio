---
import LabGlassware from "./LabGlassware.astro";
import { Icon } from "astro-icon/components";
---

<div class="w-full py-10">
  <div
    class="grid grid-cols-3 sm:grid-cols-4 md:grid-cols-6 lg:grid-cols-8 gap-4 md:gap-8 justify-items-center perspective-1000"
  >
    {
      [
        {
          icon: "typescript",
          name: "TS",
          color: "text-blue-500",
          bgColor: "bg-blue-500",
          targetNode: "node-web",
        },
        {
          icon: "go",
          name: "Go",
          color: "text-cyan-500",
          bgColor: "bg-cyan-500",
          targetNode: "node-observability", // or services
        },
        {
          icon: "nodejs",
          name: "Node",
          color: "text-green-500",
          bgColor: "bg-green-500",
          targetNode: "node-services",
        },
        {
          icon: "dotnetcore",
          name: ".NET",
          color: "text-purple-500",
          bgColor: "bg-purple-500",
          targetNode: "node-services",
        },
        {
          icon: "java",
          name: "Java",
          color: "text-red-500",
          bgColor: "bg-red-500",
          targetNode: "node-services",
        },
        {
          icon: "kubernetes",
          name: "K8s",
          color: "text-blue-600",
          bgColor: "bg-blue-600",
          targetNode: "node-k8s",
        },
        {
          icon: "amazonwebservices-wordmark",
          name: "AWS",
          color: "text-yellow-600",
          bgColor: "bg-yellow-600",
          targetNode: "node-cloud",
        },
        {
          icon: "azure",
          name: "Azure",
          color: "text-blue-400",
          bgColor: "bg-blue-400",
          targetNode: "node-cloud",
        },
        {
          icon: "docker",
          name: "Docker",
          color: "text-blue-500",
          bgColor: "bg-blue-500",
          targetNode: "node-k8s",
        },
        {
          icon: "react",
          name: "React",
          color: "text-cyan-400",
          bgColor: "bg-cyan-400",
          targetNode: "node-web",
        },
        {
          icon: "postgresql",
          name: "Postgres",
          color: "text-blue-300",
          bgColor: "bg-blue-300",
          targetNode: "node-db",
        },
        {
          icon: "microsoftsqlserver",
          name: "SQL",
          color: "text-red-600",
          bgColor: "bg-red-600",
          targetNode: "node-db",
        },
        {
          icon: "grafana",
          name: "Grafana",
          color: "text-orange-500",
          bgColor: "bg-orange-500",
          targetNode: "node-observability",
        },
        {
          icon: "prometheus",
          name: "Prom",
          color: "text-orange-600",
          bgColor: "bg-orange-600",
          targetNode: "node-observability",
        },
        {
          icon: "python",
          name: "Python",
          color: "text-yellow-500",
          bgColor: "bg-yellow-500",
          targetNode: "node-tools",
        },
        {
          icon: "lua",
          name: "Lua",
          color: "text-blue-800",
          bgColor: "bg-blue-800",
          targetNode: "node-tools",
        },
      ].map((tech) => (
        <div
          class="flex flex-col items-center gap-2 group source-tech-icon"
          data-tech={tech.icon}
          data-target={tech.targetNode}
        >
          <LabGlassware
            color={tech.color}
            bgColor={tech.bgColor}
            class="w-20 h-20 md:w-24 md:h-24"
          >
            {tech.icon && (
              <Icon
                name={`devicon:${tech.icon}`}
                class="text-3xl md:text-4xl drop-shadow-md"
              />
            )}
            {!tech.icon && <div class="text-3xl animate-pulse">âœ¨</div>}
          </LabGlassware>
          <span class="text-xs font-mono font-medium text-gray-400 group-hover:text-white transition-colors">
            {tech.name}
          </span>
        </div>
      ))
    }
  </div>
</div>
