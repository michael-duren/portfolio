---
interface Props {
  name: string;
  label: string;
  required: boolean;
}

const { name, label, required } = Astro.props;
---

<label
  class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
  for={name}
>
  {label}
</label>
<textarea
  class="w-full focus:bg-white rounded-xl bg-gray-200 p-2 text-sm text-gray-900 border-0 dark:bg-gray-800 focus:ring-0 dark:text-white dark:placeholder-gray-400"
  required={required}
  name={name}
  rows="8"></textarea>
