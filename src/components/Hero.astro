---
import { Image } from "astro:assets";
import lightWork from "../images/light-work.png";
import darkWork from "../images/dark-work.png";
---

<section
    id="home"
    class="min-h-[80vh] flex flex-col items-center justify-center relative w-full overflow-hidden"
>
    <div class="absolute inset-0 z-0">
        <Image
            src={lightWork}
            alt="Hero Background Light"
            class="w-full h-full object-cover dark:hidden opacity-90"
        />
        <Image
            src={darkWork}
            alt="Hero Background Dark"
            class="w-full h-full object-cover hidden dark:block opacity-90"
        />
        <div
            class="absolute inset-0 bg-gradient-to-b from-transparent via-transparent to-white dark:to-gray-900"
        >
        </div>
    </div>

    <div
        class="z-10 text-center px-4 animate-slide-up bg-white/80 dark:bg-gray-900/80 backdrop-blur-md p-8 rounded-xl shadow-2xl mx-4 max-w-3xl"
    >
        <h1
            class="text-4xl md:text-6xl font-bold mb-6 text-gray-900 dark:text-white drop-shadow-sm"
        >
            Michael Duren
        </h1>
        <p
            class="text-lg md:text-xl text-gray-800 dark:text-gray-100 mb-8 font-light leading-relaxed"
        >
            Software Engineer & Web Developer. Building reliable details one
            line at a time.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="#contact" class="btn btn-primary btn-lg shadow-lg">
                Get in Touch
            </a>
            <a href="#work" class="btn btn-neutral btn-lg shadow-lg">
                View Work
            </a>
        </div>
    </div>

    <div class="absolute bottom-10 animate-bounce cursor-pointer z-20">
        <a href="#about" aria-label="Scroll to About">
            <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-10 w-10 text-gray-700 dark:text-gray-200"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
            </svg>
        </a>
    </div>
</section>

<style>
    @keyframes slide-up {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-slide-up {
        animation: slide-up 1s ease-out forwards;
    }
</style>
