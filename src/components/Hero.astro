---
import { Image } from "astro:assets";
import darkWork from "../images/dark-work.png";
import SketchArrow from "./SketchArrow.astro";
---

<section
  id="home"
  class="min-h-[80vh] flex flex-col items-center justify-center relative w-full overflow-hidden"
>
  <div class="absolute inset-0 z-0">
    <Image
      src={darkWork}
      alt="Hero Background Dark"
      widths={[800, 1200, 1920, 2560]}
      sizes="100vw"
      format="webp"
      quality={80}
      loading="eager"
      fetchpriority="high"
      class="w-full h-full object-cover block"
    />
    <div
      class="absolute inset-0 bg-gradient-to-b from-transparent via-transparent to-gray-900"
    >
    </div>
  </div>

  <div
    class="z-10 text-center px-4 animate-on-scroll opacity-0 translate-y-10 transition-all duration-700 bg-gray-900/30 backdrop-blur-md p-8 rounded-xl shadow-2xl mx-4 max-w-3xl"
  >
    <h1 class="text-4xl md:text-6xl font-bold mb-2 text-white drop-shadow-sm">
      Michael Duren
    </h1>

    <p
      class="text-lg md:text-xl text-gray-100 mb-8 font-light leading-relaxed max-w-2xl mx-auto"
    >
      Software Engineer specialized in <span
        class="font-semibold text-purple-400">distributed systems</span
      > and <span class="font-semibold text-cyan-400">cloud infrastructure</span
      >. Building reliable Observability platforms, Developer Tools, and
      Scalable SaaS with Typescript, Go, C#/Java, and Python.
    </p>

    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <a href="#contact" class="btn btn-primary btn-lg shadow-lg">
        Get in Touch
      </a>
      <a href="#work" class="btn btn-neutral btn-lg shadow-lg"> View Work </a>
    </div>
  </div>

  <div class="absolute bottom-10 animate-bounce cursor-pointer z-20">
    <a href="#about" aria-label="Scroll to About" class="block w-16 h-20">
      <SketchArrow
        variant="straight-down"
        class="w-full h-full text-gray-200"
      />
    </a>
  </div>
</section>

<script>
  document.addEventListener("astro:page-load", () => {
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.remove("opacity-0", "translate-y-10");
            observer.unobserve(entry.target);
          }
        });
      },
      { threshold: 0.1 },
    );

    document.querySelectorAll(".animate-on-scroll").forEach((el) => {
      observer.observe(el);
    });
  });
</script>
