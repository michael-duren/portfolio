---
import { Image } from 'astro:assets';
import type { PortfolioItem } from '../types/portfolio-item';
import Icon from 'astro-icon';
interface Props {
  portfolioItem: PortfolioItem;
}

const { portfolioItem } = Astro.props;
const { title, description, websiteLink, codeLink, images } = portfolioItem;
---

<div
  class="shadow-xl website-card group relative h-full min-h-[30rem] rounded-lg flex-col flex items-center cursor-pointer"
>
  <!-- carousel -->
  <custom-carousel
    aria-label={`${title} photos`}
    class="relative h-full w-full"
  >
    <ul data-slides>
      {
        images.map((image, i) => {
          return (
            <li
              class="absolute slide shadow-lg opacity-0 inset-0 transition-opacity delay-300 duration-300"
              data-active
            >
              <Image
                class="object-cover rounded-xl object-center block h-full"
                id={`item${i + 1}-${title}`}
                src={image}
                alt={`${title} image #${i + 1}`}
              />
            </li>
          );
        })
      }
    </ul>
  </custom-carousel>

  <div
    class="h-full overlay group-hover:block hidden rounded-xl absolute w-full bg-black bg-opacity-70 z-30"
  >
    <div
      class="text-gray-100 justify-between h-full items-center flex flex-col p-4"
    >
      <div>
        <h2 class="text-2xl font-rock">{title}</h2>
        <p class="mt-8 text-xs font-semibold">{description}</p>
      </div>
      <div class="flex gap-4 z-40">
        <a href={codeLink} rel="noopener noreferrer" target="_blank">
          <button class="btn btn-circle">
            <Icon class="text-gray-900 h-8 w-8" name="ic:baseline-code" />
          </button>
        </a>
        <a href={websiteLink} rel="noopener noreferrer" target="_blank">
          <button class="btn btn-circle btn-neutral">
            <Icon class="text-white stroke-white h-8 w-8" name="carbon:view" />
          </button>
        </a>
      </div>
    </div>
  </div>
</div>

<style>
  .slide[data-active] {
    opacity: 1;
    z-index: 1;
    transition-delay: 0ms;
  }
</style>

<script>
  import '../scripts/carousel.ts';
</script>
