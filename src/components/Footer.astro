---
import { execSync } from "node:child_process";
import Social from "./Social.astro";

const commitHash = execSync("git rev-parse --short HEAD").toString().trim();
---

<footer class="py-12 mt-20" transition:persist>
  <div class="max-w-4xl mx-auto px-4 flex flex-col items-center gap-6">
    <Social />

    <div class="text-center text-sm text-gray-500">
      <p>
        &copy; {new Date().getFullYear()} Michael Duren. All rights reserved.
      </p>
      <p class="mt-2 text-xs">
        Built with Astro, Tailwind, & ❤️ <span class="mx-1">•</span> v.{
          commitHash
        }
      </p>
    </div>
  </div>
</footer>
