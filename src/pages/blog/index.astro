---
import { getCollection } from "astro:content";
import MainLayout from "../../layouts/MainLayout.astro";
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<MainLayout title="Blog | Michael Duren">
  <div class="relative z-10 max-w-4xl mx-auto px-4 py-20">
    <h1 class="text-4xl font-bold mb-2 text-white">Blog</h1>
    <p class="text-lg text-gray-300 mb-12">
      Thoughts on code, chaos, and everything in between.
    </p>

    <div class="grid gap-8">
      {
        posts.map((post) => (
          <a
            href={`/blog/${post.slug}`}
            class="group block p-8 rounded-2xl bg-black/40 backdrop-blur-xl border border-white/10 transition-all duration-300 hover:bg-black/50 hover:scale-[1.02] hover:shadow-xl"
          >
            {post.data.cardImage && (
              <div class="mb-6 rounded-xl overflow-hidden aspect-video border border-white/5 shadow-lg group-hover:shadow-purple-900/20 transition-all duration-300">
                <Image
                  src={post.data.cardImage}
                  alt={post.data.title}
                  width={800}
                  height={450}
                  class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
                />
              </div>
            )}
            <div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-4">
              <h2 class="text-2xl font-bold text-white group-hover:text-purple-400 transition-colors">
                {post.data.title}
              </h2>
              <div class="flex items-center gap-2 text-sm text-gray-400">
                <Icon name="mdi:calendar" class="w-4 h-4" />
                <time datetime={post.data.pubDate.toISOString()}>
                  {post.data.pubDate.toLocaleDateString("en-US", {
                    year: "numeric",
                    month: "long",
                    day: "numeric",
                  })}
                </time>
              </div>
            </div>
            <p class="text-gray-300 mb-6 line-clamp-2">
              {post.data.description}
            </p>
            <div class="flex flex-wrap gap-2">
              {post.data.tags?.map((tag) => (
                <span class="px-3 py-1 text-sm rounded-full bg-purple-900/30 text-purple-300 border border-purple-700/50">
                  #{tag}
                </span>
              ))}
            </div>
          </a>
        ))
      }
    </div>
  </div>
</MainLayout>
