---
import MainLayout from "../layouts/MainLayout.astro";
import AnimatedBackground from "../components/AnimatedBackground.astro";
import { Icon } from "astro-icon";
---

<MainLayout title="Michael Duren - Resume">
  <AnimatedBackground />
  <div class="relative z-10 w-full max-w-6xl mx-auto">
    <div class="flex flex-col gap-4">
      <!-- Header with download button -->
      <div
        class="flex flex-col sm:flex-row justify-between items-center gap-4 p-6 rounded-lg bg-white/80 dark:bg-gray-800/80 backdrop-blur-md shadow-lg dark:shadow-gray-500"
      >
        <h1
          class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-gray-100"
        >
          Resume
        </h1>
        <a
          href="/resume.pdf"
          download="Michael_Duren_Resume.pdf"
          class="btn btn-primary flex items-center gap-2 hover:scale-105 transition-transform"
        >
          <Icon name="iconoir:download" class="w-5 h-5" />
          Download PDF
        </a>
      </div>

      <!-- PDF Viewer Container -->
      <div
        class="rounded-lg overflow-hidden shadow-2xl dark:shadow-gray-500 bg-white dark:bg-gray-800"
      >
        <div class="relative w-full" style="min-height: 80vh;">
          <!-- PDF Embed for Desktop -->
          <object
            data="/resume.pdf"
            type="application/pdf"
            class="w-full hidden md:block"
            style="height: 80vh;"
          >
            <div
              class="flex flex-col items-center justify-center p-8 gap-4 text-center"
            >
              <p class="text-gray-600 dark:text-gray-400">
                Your browser doesn't support PDF viewing.
              </p>
              <a
                href="/resume.pdf"
                download="Michael_Duren_Resume.pdf"
                class="btn btn-primary flex items-center gap-2"
              >
                <Icon name="iconoir:download" class="w-5 h-5" />
                Download Resume
              </a>
            </div>
          </object>

          <!-- Mobile-friendly iframe -->
          <iframe
            src="/resume.pdf"
            class="w-full md:hidden"
            style="height: 80vh;"
            title="Resume PDF"></iframe>

          <!-- Fallback message for mobile if iframe doesn't work -->
          <div
            class="md:hidden flex flex-col items-center justify-center p-8 gap-4 bg-gray-50 dark:bg-gray-900 rounded-lg"
          >
            <Icon
              name="iconoir:page"
              class="w-16 h-16 text-purple-600 dark:text-purple-400"
            />
            <p class="text-gray-600 dark:text-gray-400 text-center">
              Unable to display PDF on this device.
            </p>
            <a
              href="/resume.pdf"
              download="Michael_Duren_Resume.pdf"
              class="btn btn-primary flex items-center gap-2"
            >
              <Icon name="iconoir:download" class="w-5 h-5" />
              Download Resume
            </a>
          </div>
        </div>
      </div>

      <!-- Additional info card -->
      <div
        class="p-6 rounded-lg bg-white/80 dark:bg-gray-800/80 backdrop-blur-md shadow-lg dark:shadow-gray-500"
      >
        <p class="text-sm text-gray-600 dark:text-gray-400 text-center">
          Last updated: {
            new Date().toLocaleDateString("en-US", {
              month: "long",
              year: "numeric",
            })
          }
        </p>
      </div>
    </div>
  </div>
</MainLayout>

<style>
  /* Ensure PDF viewer has proper styling in dark mode */
  object,
  iframe {
    border: none;
    background: white;
  }

  .dark object,
  .dark iframe {
    filter: brightness(0.95);
  }
</style>
