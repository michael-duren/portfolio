---
import MainLayout from "../layouts/MainLayout.astro";
import { Icon } from "astro-icon/components";
---

<MainLayout title="Michael Duren - Resume">
  <div class="relative z-10 w-full max-w-6xl mx-auto">
    <div class="flex flex-col gap-4">
      <div
        class="flex flex-col sm:flex-row justify-between items-center gap-4 p-6 rounded-lg bg-gray-800/80 backdrop-blur-md shadow-lg"
      >
        <h1 class="text-3xl md:text-4xl font-bold text-gray-100">Resume</h1>
        <a
          href="https://docs.google.com/document/d/1hgpGkMp01GM5-OWu-PcXUUCYzoWl-U04/export?format=pdf"
          target="_blank"
          rel="noopener noreferrer"
          class="btn btn-primary flex items-center gap-2 hover:scale-105 transition-transform"
        >
          <Icon name="iconoir:download" class="w-5 h-5" />
          Download PDF
        </a>
      </div>

      <div class="rounded-lg overflow-hidden shadow-2xl bg-gray-800">
        <iframe
          src="https://docs.google.com/document/d/1hgpGkMp01GM5-OWu-PcXUUCYzoWl-U04/preview?embedded=true"
          class="w-full h-[80vh] border-0 bg-white"
          title="Resume"></iframe>
      </div>

      <div class="p-6 rounded-lg bg-gray-800/80 backdrop-blur-md shadow-lg">
        <p class="text-sm text-gray-400 text-center">
          Last updated: {
            new Date().toLocaleDateString("en-US", {
              month: "long",
              year: "numeric",
            })
          }
        </p>
      </div>
    </div>
  </div>
</MainLayout>

<style>
  object,
  iframe {
    border: none;
    background: white;
  }

  /* Dark mode filter removed or kept? user wants dark. */
  object,
  iframe {
    filter: brightness(0.95);
  }
</style>
