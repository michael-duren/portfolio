---
import { ViewTransitions } from 'astro:transitions';
import Header from '../components/Header.astro';
import Nav from '../components/Nav.astro';
const { title } = Astro.props;
import '../styles/global.styles.css';
---

<html lang="en">
  <head>
    <ViewTransitions />
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Rock+Salt&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body class="min-h-screen p-4 gap-2">
    <div class="px-2 py-2 rounded-lg">
      <Header />
    </div>
    <div class="flex h-full px-2 py-2 rounded-lg gap-8 flex-col md:flex-row">
      <aside class="bg-gray-50 px-8 py-2 rounded-lg shadow-md">
        <Nav />
      </aside>
      <main class="w-full h-full flex flex-col items-center">
        <slot />
      </main>
    </div>
    <script>
      import '../scripts/terminal.ts';
    </script>
  </body></html
>
